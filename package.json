{
  "name": "brosbook",
  "version": "1.0.0",
  "main": "server.js",
  "author": "Shohel Rana",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run server:start\" \"npm run client:start\" --names server,client",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\" --names server,client",
    "server:start": "npm run build && cross-env NODE_ENV=production node dist/server.js",
    "server:dev": "nodemon",
    "client:start": "cd client && npm run start",
    "client:dev": "cd client && npm run dev",
    "build": "tsc -p . && tsc-alias -p .",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js --config server/config/database.ts",
    "seed": "ts-node ./node_modules/typeorm-seeding/dist/cli.js  --configName server/config/database.ts seed"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie": "^0.4.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.2.2",
    "@types/faker": "^5.5.9",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.0",
    "@types/nodemailer-smtp-transport": "^2.7.5",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^8.3.4",
    "concurrently": "^7.2.2",
    "faker": "^5.5.3",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.18",
    "ts-node": "^10.3.0",
    "tsc-alias": "^1.4.0",
    "tsconfig-paths": "^3.11.0",
    "tscpaths": "^0.0.9",
    "typeorm-cli": "^1.0.7",
    "typeorm-seeding": "^1.6.1",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@types/nodemailer": "^6.4.4",
    "bcrypt": "^5.0.1",
    "cookie": "^0.4.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "express-validator": "^6.13.0",
    "google-auth-library": "^7.10.3",
    "hashids": "^2.2.10",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3-rc.0",
    "nodemailer": "^6.7.2",
    "nodemailer-smtp-transport": "^2.7.4",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.4.1",
    "socket.io-cookies-parser": "^1.1.1",
    "typeorm": "^0.2.40",
    "uuid": "^8.3.2"
  }
}
