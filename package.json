{
  "name": "brosbook",
  "version": "1.0.0",
  "main": "main.js",
  "author": "Shohel Rana",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run server:start\" \"npm run client:start\" --names server,client",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\" --names server,client",
    "server:start": "npm run build && cross-env NODE_ENV=production node server_dist/main.js",
    "server:dev": "nodemon",
    "client:start": "cd client && npm run start",
    "client:dev": "cd client && npm run dev",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json"
  },
  "devDependencies": {
    "@types/cookie": "^0.5.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.2.2",
    "@types/faker": "^6.6.9",
    "@types/is-empty": "^1.2.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.23",
    "@types/nodemailer": "^6.4.6",
    "@types/nodemailer-smtp-transport": "^2.7.5",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.10",
    "concurrently": "^7.2.2",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.1",
    "tsconfig-paths": "^4.1.1",
    "tscpaths": "^0.0.9",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "argon2": "^0.30.1",
    "class-transformer": "^0.5.1",
    "class-transformer-validator": "^0.9.1",
    "class-validator": "^0.13.2",
    "cookie": "^0.5.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "google-auth-library": "^8.5.2",
    "is-empty": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3-rc.0",
    "nodemailer": "^6.7.2",
    "nodemailer-smtp-transport": "^2.7.4",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.4.1",
    "socket.io-cookies-parser": "^1.1.1",
    "typeorm": "^0.3.10",
    "uuid": "^9.0.0"
  }
}
