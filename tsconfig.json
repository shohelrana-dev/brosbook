{
   "compilerOptions": {
      // https://www.typescriptlang.org/tsconfig
      "lib": ["es2017"],
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "server/dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      // Additions
      "esModuleInterop": true,
      // Strict stuff
      // "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": false,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      // "strictPropertyInitialization": true,
      "noImplicitThis": true,
      // Extra
      "alwaysStrict": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "resolveJsonModule": true,
      "typeRoots": [
        "server/api/types",
         "node_modules/@types"
      ],
      "allowJs": false,
      "importHelpers": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "paths": {
         "@api/*": ["server/api/*"],
         "@config/*": ["server/config/*"],
         "@startup/*": ["server/startup/*"],
         "@database/*": ["server/api/modules"],
         "@modules/*": ["server/api/exceptions/*"],
         "@exceptions/*": ["server/api/exceptions/*"],
         "@entities/*": ["server/api/database/entities/*"],
         "@middleware/*": ["server/api/middleware/*"],
         "@interfaces/*": ["server/api/interfaces/*"],
         "@utils/*": ["server/api/utils/*"]
      }
   },
   "include": [
     "custom.d.ts",
     "server/**/*.ts",
     "server/**/*.json",
     ".env"
   ],
   "exclude": [
      "node_modules",
      "client",
      "dist"
   ]
}